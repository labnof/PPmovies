<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.babatundeanafi.ppmovies.views.MovieDetailActivity"
    >

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#424242"
           >


            <TextView
                android:id="@+id/textview_movie_tittle"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:background="#009688"
                android:ellipsize="end"
                android:padding="16dp"
                android:text="@string/MP_movies"
                android:textSize="32sp"
                android:typeface="sans"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintLeft_creator="1" />


            <TextView
                android:id="@+id/textview_overview"
                android:layout_width="221dp"
                android:layout_height="228dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:text="@string/detail_overview"
                android:textColor="#B2DFDB"
                android:textColorLink="#8DE67F"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_movie_tittle"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <ImageView
                android:id="@+id/imageview_poster"
                android:layout_width="202dp"
                android:layout_height="116dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/poster_image"
                android:src="@mipmap/ic_launcher"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textview_movie_tittle"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/textview_overview"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.053"
                android:layout_marginStart="8dp" />


            <TextView
                android:id="@+id/linearLayout2"
                android:layout_width="165dp"
                android:layout_height="51dp"
                android:padding="8dp"
                android:text="@string/year_details_string"
                android:textColor="#FFFFFF"
                android:textColorLink="#8DE67F"
                android:textSize="24sp"
                android:typeface="sans"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/button"
                android:layout_marginLeft="40dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textview_movie_miniutes"
                android:layout_width="98dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:text="@string/movie_time"
                android:textColor="#FFFFFF"
                android:textColorLink="#8DE67F"
                android:textSize="20sp"
                android:typeface="sans"
                tools:layout_conversion_absoluteHeight="40dp"
                tools:layout_conversion_absoluteWidth="98dp"
                tools:layout_conversion_absoluteX="208dp"
                tools:layout_conversion_absoluteY="56dp"
                app:layout_constraintRight_toLeftOf="@+id/textview_overview"
                android:layout_marginRight="32dp"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toBottomOf="@+id/textview_movie_tittle"
                app:layout_constraintLeft_toRightOf="@+id/imageview_poster"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="1.0" />

            <TextView
                android:id="@+id/textview_ratings"
                android:layout_width="wrap_content"
                android:layout_height="32dp"

                android:padding="8dp"
                android:text="@string/user_rating_string"
                android:textColor="#FFFFFF"
                android:textColorLink="#8DE67F"
                android:textSize="14sp"
                android:typeface="sans"
                tools:layout_conversion_absoluteHeight="32dp"
                tools:layout_conversion_absoluteWidth="57dp"
                tools:layout_conversion_absoluteX="208dp"
                tools:layout_conversion_absoluteY="96dp"
                app:layout_constraintTop_toBottomOf="@+id/textview_movie_miniutes"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/textview_movie_miniutes" />

            <Button
                android:id="@+id/button"
                android:layout_width="221dp"
                android:layout_height="49dp"
                android:text="Add movie to favourite"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/imageview_poster"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageview_poster"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />



        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>